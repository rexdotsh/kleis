{
  "name": "kleis",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot --no-clear-screen --feature DEV src/index.ts",
    "build": "bun run bundle",
    "bundle": "bun build src/index.ts --target=bun --outdir=dist --packages=external",
    "typecheck": "tsgo --noEmit -p tsconfig.json",
    "lint": "bun x ultracite check",
    "fix": "bun x ultracite fix",
    "format": "biome format --write",
    "test": "bun test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@libsql/client": "^0.15.15",
    "@vercel/functions": "^3.4.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@types/bun": "^1.3.9",
    "@typescript/native-preview": "^7.0.0-dev.20260223.1",
    "drizzle-kit": "^0.31.9",
    "lefthook": "^2.1.1",
    "ultracite": "7.2.3"
  }
}
